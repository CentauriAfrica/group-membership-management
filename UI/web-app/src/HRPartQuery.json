{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "const": "SqlMembership"
        },
        "source": {
            "type": "object",
            "properties": {
                "ids": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                        "type": "integer"
                    }
                },
                "filter": {
                    "type": "string",
                    "minLength": 1
                },
                "depth": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "oneOf": [
                { "required": ["ids"] },
                { "required": ["filter"] }
            ],
            "dependencies": {
                "depth": ["ids"]
            },
            "additionalProperties": false
        }
    },
    "required": ["type", "source"],
    "additionalProperties": false
}
